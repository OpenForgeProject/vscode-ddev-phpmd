{
  "name": "vscode-ddev-phpmd",
  "displayName": "DDEV PHPMD",
  "description": "PHP Mess Detector integration for VS Code using DDEV",
  "version": "0.7.0",
  "publisher": "OpenForgeProject",
  "license": "GPL-3.0",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenForgeProject/vscode-ddev-phpmd.git"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "php",
    "phpmd",
    "ddev",
    "linter",
    "quality",
    "static-analysis",
    "mess-detector"
  ],
  "activationEvents": [
    "onLanguage:php",
    "workspaceContains:**/.ddev/config.yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "DDEV PHPMD",
      "properties": {
        "ddev-phpmd.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable PHPMD integration. When disabled, no analysis will be performed and diagnostics will be cleared."
        },
        "ddev-phpmd.validateOn": {
          "type": "string",
          "enum": [
            "save",
            "type"
          ],
          "default": "save",
          "description": "Run validation when you save the file or when you type"
        },
        "ddev-phpmd.rulesets": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "cleancode",
            "codesize",
            "controversial",
            "design",
            "naming",
            "unusedcode"
          ],
          "description": "PHPMD rulesets to use"
        },
        "ddev-phpmd.minSeverity": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "info"
          ],
          "default": "warning",
          "description": "Minimum severity level for reported issues"
        },
        "ddev-phpmd.configPath": {
          "type": "string",
          "default": "",
          "description": "Path to custom PHPMD ruleset XML file (relative to workspace root)"
        }
      }
    },
    "commands": [
      {
        "command": "ddev-phpmd.analyzeCurrentFile",
        "title": "DDEV PHPMD: Analyze Current File"
      },
      {
        "command": "ddev-phpmd.enable",
        "title": "DDEV PHPMD: Enable"
      },
      {
        "command": "ddev-phpmd.disable",
        "title": "DDEV PHPMD: Disable"
      },
      {
        "command": "ddev-phpmd.toggle",
        "title": "DDEV PHPMD: Toggle Enable/Disable"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "node esbuild.js",
    "watch-tests": "node esbuild.js --watch",
    "pretest": "npm run compile-tests && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "sinon": "^20.0.0",
    "typescript": "^5.8.3"
  }
}
